
@{
}

@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-light p-1">
        <h4 style="color:darkblue; font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif; letter-spacing:2px;font-size:38px;">@Model.Title</h4>

        <span lang="badge bg-info" style="float:right;">
            <span>ISBN: @Model.Isbn</span>
            <br />
            <span style="color:lightcoral">Price: $@Model.Price</span>
        </span>
    </div>
    <ul>
        <li>Author: @Model.Author</li>
        <li>Publisher: @Model.Publisher</li>
        <li>Classification: @Model.Classification</li>
        <li>Page Count: @Model.PageCount</li>
    </ul>
    <br />

</div>